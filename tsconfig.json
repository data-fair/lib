{
  "compilerOptions": {
    "target": "es2017",
    "module": "CommonJS",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "rootDir": "src",
    "outDir": "./cjs",
    "declaration": true,
    "strict": true,
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "mjs", "cjs"]
}